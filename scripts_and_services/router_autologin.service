[Unit]
Description=Automated router web UI login
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/lib/router_autologin/router_autologin.sh
Restart=always
User=recon
Environment=DISPLAY=:0
Environment=XAUTHORITY=/home/$username/.Xauthority

[Install]
WantedBy=default.target
